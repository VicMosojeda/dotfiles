{
  "positionX": "left",
  "positionY": "top",
  "control-center-margin": 50,
  "notification-icon-size": 40,
  "notification-body-image-height": 160,
  "notification-body-image-width": 90,
  "timeout": 6,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-width": 390,
  "notification-window-width": 390,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 100,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    },
    "example-action-script": {
      "exec": "echo 'Do something actionable!'",
      "urgency": "Normal",
      "run-on": "action"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": [
    "mpris",
    "inhibitors",
    "title",
    "dnd",
    "notifications",
    "volume",
    "brightnessctl"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Limpiar Todo",
      "clear-all-button": true
    },
    "title": {
      "text": "Notificaciones",
      "clear-all-button": true,
      "button-text": "Limpiar Todo"
    },
    "dnd": {
      "text": "No Molestar"
    },
    "label": {
      "max-lines": 10,
      "text": "Label Text"
    },
    "mpris": {
      "image-size": 50,
      "image-radius": 10
    },
    "volume": {
      "label": ""
    },
    "brightnessctl": {
      "label": "",
      "device": "amdgpu_bl1",
      "min": 5
    }
  }
}
