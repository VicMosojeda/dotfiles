# Brightness
# bindsym XF86MonBrightnessUp exec brightnessctl set 2%+
# bindsym XF86MonBrightnessDown exec brightnessctl set 2%-

# Vol
# bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +2%
# bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -2%
# bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Brightness
bindsym XF86MonBrightnessUp exec ~/.config/dunst/media-controls.sh bright-up
bindsym XF86MonBrightnessDown exec ~/.config/dunst/media-controls.sh bright-down

# Volumen
bindsym XF86AudioRaiseVolume exec ~/.config/dunst/media-controls.sh vol-up
bindsym XF86AudioLowerVolume exec ~/.config/dunst/media-controls.sh vol-down



# controlplayer
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
